<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
// Tab Functionality
function showTab(id, btn){
    document.querySelectorAll('.tab-btn').forEach(b=>b.classList.remove('active'));
    btn.classList.add('active');
    document.querySelectorAll('.tab-content').forEach(t=>t.classList.remove('show'));
    document.getElementById(id).classList.add('show');
}

// Accordion Functionality
document.querySelectorAll('.accordion').forEach(acc=>{
    acc.addEventListener('click',()=>{
        acc.classList.toggle('active');
        const panel=acc.nextElementSibling;
        panel.style.display=panel.style.display==='block'?'none':'block';
    });
});

// Email Simulation Data
let emailPool=[];
const senders=['john@example.com','alice@bank.in','service@upi.com','support@gov.in','admin@digilocker.com'];
const subjects=['Verify Your Account','Payment Alert','GST Submission','Login Attempt','Unusual Activity Detected'];
const cues=['Suspicious URL detected!','Possible phishing link!','Unknown sender domain!','Attachment suspicious!','Metadata anomaly detected!'];
let mostSuspiciousEmail=null;

// Add Email Function
function addEmail(){
    const from=senders[Math.floor(Math.random()*senders.length)];
    const subject=subjects[Math.floor(Math.random()*subjects.length)];
    const type=Math.random()<0.4?'phishing':'legit';
    const confidence=Math.floor(Math.random()*50)+50;
    const cue=cues[Math.floor(Math.random()*cues.length)];
    const email={from,subject,type,confidence,cue};
    emailPool.unshift(email);
    if(emailPool.length>10) emailPool.pop();
    renderEmails();
    updateTopThreats();
}

// Render Emails
function renderEmails(){
    const dashboard=document.getElementById('emailDashboard');
    dashboard.innerHTML='';
    emailPool.forEach(email=>{
        const card=document.createElement('div');
        card.className='email-card';
        card.innerHTML=`
            <div class="status ${email.type==='phishing'?'phishing':'legit'}">${email.type.charAt(0).toUpperCase()+email.type.slice(1)}</div>
            <p><strong>From:</strong> ${email.from}</p>
            <p><strong>Subject:</strong> ${email.subject}</p>
            <div class="probability-bar" style="background:${email.confidence>75?'#e74c3c':email.confidence>50?'#f1c40f':'#2ecc71'}; width:${email.confidence}%; height:10px; border-radius:5px; margin:5px 0;"></div>
            <div class="email-details">
                <p class="cue">${email.cue}</p>
                <p class="confidence">Phishing Probability: ${email.confidence}%</p>
                <button class="mark-btn" onclick="markEmail('${email.from}','${email.subject}','${email.type}',this)">Mark as ${email.type==='phishing'?'Legitimate':'Phishing'}</button>
            </div>
        `;
        card.addEventListener('click',()=>card.querySelector('.email-details').style.display=card.querySelector('.email-details').style.display==='block'?'none':'block');
        dashboard.appendChild(card);
    });

    // Most Suspicious Email
    const topEmail=emailPool.reduce((prev,curr)=>curr.confidence>prev.confidence?curr:prev,emailPool[0]);
    mostSuspiciousEmail=topEmail;
    const box=document.getElementById('mostSuspicious');
    box.innerHTML=`
        <h3>Most Suspicious Email</h3>
        <p><strong>From:</strong> ${topEmail.from} <br>
        <strong>Subject:</strong> ${topEmail.subject} <br>
        <strong>Phishing Probability:</strong> ${topEmail.confidence}% <br>
        <strong>Cue:</strong> ${topEmail.cue}</p>
    `;
    box.classList.add('flash-alert');
    setTimeout(()=>box.classList.remove('flash-alert'),2000);
}

// Adaptive Learning
function markEmail(from,subject,type,btn){
    const feedback=type==='phishing'?-5:5;
    emailPool.forEach(e=>{if(e.from===from && e.subject===subject){e.confidence=Math.max(0,Math.min(100,e.confidence+feedback));}});
    btn.disabled=true; btn.textContent="Marked";
}

// Multi-Language Support
document.getElementById('languageSelect').addEventListener('change',e=>{
    const lang=e.target.value;
    emailPool.forEach(email=>{
        if(lang==='hi') email.cue=email.type==='phishing'?'संदिग्ध URL का पता चला!' :'कोई संदिग्ध सामग्री नहीं';
        else if(lang==='es') email.cue=email.type==='phishing'?'¡URL sospechoso detectado!' :'Contenido verificado.';
        else email.cue=email.type==='phishing'?'Suspicious URL detected!' :'No suspicious content';
    });
    renderEmails();
});

// Settings Variables
let alertThreshold=75, updateInterval=4000, soundEnabled=true, darkMode=true, emailTimer=setInterval(addEmail,updateInterval);

// Settings Functions
function toggleAlertThreshold(){
    const panel=document.getElementById('settingsPanel');
    panel.innerHTML=`<label>Alert Threshold (%): ${alertThreshold}</label>
    <input type="range" min="0" max="100" value="${alertThreshold}" oninput="updateAlertThreshold(this.value)">`;
}
function updateAlertThreshold(val){ alertThreshold=parseInt(val); toggleAlertThreshold(); updateTopThreats(); }
function toggleLanguage(){ const panel=document.getElementById('settingsPanel'); panel.innerHTML=`<label>Select Language:</label>
<select onchange="changeLanguage(this.value)">
<option value="en">English</option>
<option value="hi">Hindi</option>
<option value="es">Spanish</option>
</select>`;}
function changeLanguage(lang){ document.getElementById('languageSelect').value=lang; document.getElementById('languageSelect').dispatchEvent(new Event('change')); toggleLanguage();}
function toggleUpdateInterval(){ const panel=document.getElementById('settingsPanel'); panel.innerHTML=`<label>Update Interval (ms): ${updateInterval}</label><input type="range" min="1000" max="10000" step="500" value="${updateInterval}" oninput="changeInterval(this.value)">`;}
function changeInterval(val){ updateInterval=parseInt(val); clearInterval(emailTimer); emailTimer=setInterval(addEmail,updateInterval); toggleUpdateInterval();}
function toggleTheme(){ const panel=document.getElementById('settingsPanel'); panel.innerHTML=`<label>Theme:</label><button onclick="switchTheme()">Toggle Dark/Light Mode</button>`;}
function switchTheme(){ darkMode=!darkMode; document.body.style.background=darkMode?'#0f111a url(https://cdn.pixabay.com/photo/2017/01/10/19/05/cyber-1967396_1280.jpg) no-repeat center center fixed':'#f0f0f0'; document.body.style.color=darkMode?'#ecf0f1':'#111';}
function toggleSound(){ const panel=document.getElementById('settingsPanel'); panel.innerHTML=`<label>Sound Alerts:</label><button onclick="soundEnabled=!soundEnabled; toggleSound();">Toggle On/Off (Currently: ${soundEnabled?'On':'Off'})</button>`;}

// Top Threats Function
function updateTopThreats(){
    const topList=document.getElementById('topThreatsList'); topList.innerHTML='';
    emailPool.filter(e=>e.confidence>=alertThreshold).forEach(e=>{
        const li=document.createElement('li');
        li.innerHTML=`<strong>From:</strong> ${e.from} | <strong>Subject:</strong> ${e.subject} | <strong>Probability:</strong> ${e.confidence}% | <strong>Cue:</strong> ${e.cue}`;
        li.className="flash-threat";
        topList.appendChild(li);
        if(soundEnabled && e.type==='phishing') new Audio('https://freesound.org/data/previews/341/341695_5260876-lq.mp3').play();
    });
}

// Charts
const pieCtx=document.getElementById('pieChart').getContext('2d');
const pieChart=new Chart(pieCtx,{type:'pie',data:{labels:['Phishing','Legitimate'],datasets:[{data:[0,0],backgroundColor:['#e74c3c','#2ecc71']}]},options:{responsive:true}});
const lineCtx=document.getElementById('lineChart').getContext('2d');
const lineChart=new Chart(lineCtx,{type:'line',data:{labels:[],datasets:[{label:'Phishing Probability Trend',data:[],borderColor:'#e74c3c',backgroundColor:'rgba(231,76,60,0.2)',fill:true}]},options:{responsive:true,scales:{y:{min:0,max:100}}}});

// Update charts in real-time
function updateCharts(){
    const phishingCount=emailPool.filter(e=>e.type==='phishing').length;
    const legitCount=emailPool.filter(e=>e.type==='legit').length;
    pieChart.data.datasets[0].data=[phishingCount,legitCount];
    pieChart.update();

    // Line chart last email
    if(emailPool.length>0){
        const last=emailPool[0];
        lineChart.data.labels.push(new Date().toLocaleTimeString());
        lineChart.data.datasets[0].data.push(last.confidence);
        if(lineChart.data.labels.length>10){ lineChart.data.labels.shift(); lineChart.data.datasets[0].data.shift();}
        lineChart.update();
    }
}
setInterval(()=>{ addEmail(); updateCharts(); },updateInterval);

</script>
</body>
</html>
